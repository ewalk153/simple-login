<!DOCTYPE html>
<html>
  <head>
    <title>SimpleLogin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if flash.key?('alert') %>
      <div>
        <%= flash['alert'] %> 
      </div>
    <% end %>
    <% if flash.key?('notice') %>
      <div>
        <%= flash['notice'] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
